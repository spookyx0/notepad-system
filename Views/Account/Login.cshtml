@model MyNotesApp.Models.UserModel
@{
    ViewData["Title"] = "Login Page";
}


<section class="ftco-section mt-5">
    <div class="inset-0 bg-black opacity-50"></div> 
    <div class="container z-10 flex justify-center items-center h-auto md:h-[86vh]"> <!-- 86vh on tablets/desktop, auto on mobile -->
        <div class="border border-gray-300 bg-white rounded-lg shadow-xl flex flex-col md:flex-row h-auto md:h-full w-full max-w-xs md:max-w-2xl lg:max-w-4xl"> <!-- Outer box -->
            <div class="w-full md:w-1/2 h-64 sm:h-72 md:h-full flex items-center justify-center overflow-hidden"> <!-- Left side for the image -->
                <img src="@Url.Content("~/img/loginbg.webp")" alt="Decorative Image" class="object-cover w-full h-full md:rounded-l-lg" /> <!-- Responsive image -->
            </div>
            <div class="w-full md:w-1/2 flex flex-col items-center justify-center bg-base-200 p-6 h-full"> <!-- Right side for the login form -->
                <h2 class="text-center text-2xl font-semibold mb-4">Welcome Back!</h2> <!-- Welcoming message -->
                <p class="text-center text-gray-600 mb-6">We're glad to see you again. Please log in to continue.</p> <!-- Friendly message -->
                <form asp-action="Login" method="POST" class="flex flex-col w-full">
                    <div class="form-control mb-4">
                        <input type="email" asp-for="Email" name="Email" class="input input-bordered w-full" placeholder="Email" required />
                        <span asp-validation-for="Email" class="text-red-500"></span>
                    </div>
                    <div class="form-control mb-4 relative"> <!-- Password input with eye icon -->
                        <input id="password-field" asp-for="Password" name="Password" type="password" class="input input-bordered pr-10 w-full" placeholder="Password" required />
                        <span asp-validation-for="Password" class="text-red-500"></span>
                        <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password absolute right-3 top-1/2 transform -translate-y-1/2 cursor-pointer"></span>
                    </div>
                    <div class="form-control mb-4">
                        <button type="submit" class="btn btn-primary w-full">Login</button>
                    </div>
                    <div class="flex justify-between items-center mt-2">
                        <label class="label cursor-pointer">
                            <span class="label-text">Remember Me</span>
                            <input type="checkbox" checked class="checkbox checkbox-primary mx-2" />
                        </label>
                        <a href="#" class="text-base">Forgot Password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>








    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script>
            $(document).ready(function () {
                $(".toggle-password").click(function () {
                    let input = $("#password-field");
                    let type = input.attr("type") === "password" ? "text" : "password";
                    input.attr("type", type);

                    // Toggle the eye icon class
                    $(this).toggleClass("fa-eye fa-eye-slash");
                });
            });
        </script>
    }

