@model MyNotesApp.Models.UserModel
@{
    ViewData["Title"] = "Login Page";
}

<section class="ftco-section min-h-screen flex items-center justify-center"> <!-- Dark background for full-height -->
    <div class="container max-w-6xl w-full px-6 py-8 flex items-center justify-center relative"> <!-- Large container to hold the image and form -->
        <div class="flex w-full max-w-4xl mx-auto bg-gradient-to-r from-indigo-700 via-purple-800 to-indigo-900 rounded-lg shadow-2xl z-10"> <!-- Main card with gradient and shadow -->
            <!-- Left Side: Image -->
            <div class="hidden lg:block w-1/2 relative rounded-l-lg overflow-hidden">
                <img src="@Url.Content("~/img/notepadbg.png")" alt="Decorative Image" class="w-full h-full object-cover"> <!-- Image on the left -->
                <div class="absolute inset-0 bg-black opacity-30"></div> <!-- Dark overlay to make the content on top stand out -->
            </div>

            <!-- Right Side: Form -->
            <div class="w-full lg:w-1/2 p-8 flex flex-col justify-center text-white bg-transparent">
                <div class="text-center mb-6">
                    <img src="@Url.Content("~/img/ueplogo.png")" alt="Logo" class="mx-auto w-32 h-32 mb-4"> <!-- Logo -->
                    <h2 class="text-3xl font-semibold mb-2">Welcome Back!</h2>
                    <p class="text-lg">Please log in to continue.</p>
                </div>

                <!-- Login Form -->
                <form asp-action="Login" method="POST" class="space-y-6">
                    <!-- Email Input -->
                    <div class="form-control">
                        <input type="email" asp-for="Email" name="Email" class="w-full p-4 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:outline-none bg-transparent text-white placeholder-white" placeholder="Email" required />
                        <span asp-validation-for="Email" class="text-red-500"></span>
                    </div>

                    <!-- Password Input with Eye Toggle -->
                    <div class="form-control relative">
                        <input id="password-field" asp-for="Password" name="Password" type="password" class="w-full p-4 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:outline-none bg-transparent text-white placeholder-white" placeholder="Password" required />
                        <span asp-validation-for="Password" class="text-red-500"></span>
                        <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password absolute right-3 top-1/2 transform -translate-y-1/2 cursor-pointer text-white"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-control">
                        <button type="submit" class="w-full p-4 bg-indigo-600 rounded-lg text-white font-semibold hover:bg-indigo-700 focus:outline-none transition duration-300 ease-in-out">Login</button>
                    </div>

                    <!-- Remember Me & Forgot Password -->
                    <div class="flex justify-between items-center text-sm mt-4">
                        <label class="flex items-center cursor-pointer text-white">
                            <input type="checkbox" checked class="checkbox checkbox-primary mx-2" />
                            <span>Remember Me</span>
                        </label>
                        <a href="#" class="text-indigo-200 hover:text-indigo-300">Forgot Password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $(".toggle-password").click(function () {
                let input = $("#password-field");
                let type = input.attr("type") === "password" ? "text" : "password";
                input.attr("type", type);
                // Toggle the eye icon class
                $(this).toggleClass("fa-eye fa-eye-slash");
            });
        });
    </script>
}
