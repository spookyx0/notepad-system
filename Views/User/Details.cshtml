@model MyNotesApp.Models.UserModel

@{
    ViewData["Title"] = "User Details";
}

<h1 class="text-3xl font-extrabold mb-4 text-center text-blue-400">User Details</h1>

<div class="bg-gray-800 p-6 rounded-lg shadow-lg max-w-2xl mx-auto text-gray-300">
    <h4 class="text-lg text-gray-400 mb-6">User Information</h4>
    <hr class="mb-4 border-gray-600" />
    
    <dl class="row">
        <!-- First Name Field -->
        <dt class="col-sm-4 font-semibold text-gray-400">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-8 text-lg">
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <!-- Last Name Field -->
        <dt class="col-sm-4 font-semibold text-gray-400">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-8 text-lg">
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <!-- Email Field -->
        <dt class="col-sm-4 font-semibold text-gray-400">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-8 text-lg">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <!-- Password Field (shown for display purposes, can be omitted) -->
        <dt class="col-sm-4 font-semibold text-gray-400">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-8 text-lg">
            @Html.DisplayFor(model => model.Password)
        </dd>
    </dl>
</div>

<!-- Action Buttons -->
<div class="mt-6 text-center">
    <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-primary mx-2 text-lg font-semibold">Edit</a>
    <a asp-action="Index" class="btn btn-secondary mx-2 text-lg font-semibold">Back to List</a>
</div>
