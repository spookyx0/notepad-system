@model MyNotesApp.Models.UserModel

@{
    ViewData["Title"] = "Delete User";
}

<h1 class="text-3xl font-extrabold mb-4 text-center text-red-500">Delete User</h1>

<div class="bg-gray-800 p-6 rounded-lg shadow-lg max-w-2xl mx-auto text-gray-300">
    <h3 class="text-xl text-center mb-4 text-red-400">Are you sure you want to delete this user?</h3>
    <h4 class="text-lg text-gray-400 mb-6">User Information</h4>
    <hr class="mb-4 border-gray-600" />
    
    <dl class="row">
        <!-- First Name Field -->
        <dt class="col-sm-4 font-semibold text-gray-400">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-8 text-lg">
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <!-- Last Name Field -->
        <dt class="col-sm-4 font-semibold text-gray-400">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-8 text-lg">
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <!-- Email Field -->
        <dt class="col-sm-4 font-semibold text-gray-400">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-8 text-lg">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <!-- Password Field (for reference) -->
        <dt class="col-sm-4 font-semibold text-gray-400">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-8 text-lg">
            @Html.DisplayFor(model => model.Password)
        </dd>
    </dl>

    <!-- Delete Confirmation Form -->
    <form asp-action="Delete" class="mt-6 text-center">
        <input type="hidden" asp-for="UserId" />
        
        <input type="submit" value="Delete" class="btn btn-danger text-lg font-semibold mx-2" /> 
        <a asp-action="Index" class="btn btn-secondary text-lg font-semibold mx-2">Back to List</a>
    </form>
</div>
