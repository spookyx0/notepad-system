@model MyNotesApp.Models.NoteModel

@{
    ViewData["Title"] = "Create Note";
}

<h1 class="text-3xl font-extrabold mb-4 text-center text-blue-400">Create Note</h1>

<h4 class="text-lg text-gray-300 text-center mb-6">Note Model</h4>

<div class="flex justify-center">
    <div class="col-md-4 bg-gray-800 p-6 rounded-lg shadow-lg max-w-md w-full">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <!-- Title Field -->
            <div class="form-group mb-4">
                <label asp-for="Title" class="control-label text-gray-200 font-medium mb-1"></label>
                <input asp-for="Title" class="form-control w-full bg-gray-900 text-gray-300 border border-gray-600 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-150 ease-in-out" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Content Field -->
            <div class="form-group mb-4">
                <label asp-for="Content" class="control-label text-gray-200 font-medium mb-1"></label>
                <input asp-for="Content" class="form-control w-full bg-gray-900 text-gray-300 border border-gray-600 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-150 ease-in-out" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <!-- UserId Dropdown Field -->
            <div class="form-group mb-4">
                <label asp-for="UserId" class="control-label text-gray-200 font-medium mb-1">Select User</label>
                <select asp-for="UserId" class="form-control w-full bg-gray-900 text-gray-300 border border-gray-600 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-150 ease-in-out" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary w-full mt-2 p-2 text-lg font-semibold rounded-md transition duration-150 ease-in-out hover:bg-blue-600" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="text-blue-400 hover:underline hover:text-blue-500 transition duration-150 ease-in-out">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
