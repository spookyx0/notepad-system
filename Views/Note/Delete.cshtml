@model MyNotesApp.Models.NoteModel

@{
    ViewData["Title"] = "Delete Note";
}

<h1 class="text-3xl font-extrabold mb-4 text-center text-red-500">Delete Note</h1>

<div class="bg-gray-800 p-6 rounded-lg shadow-lg max-w-2xl mx-auto text-gray-300">
    <h3 class="text-xl text-center mb-4 text-red-400">Are you sure you want to delete this note?</h3>
    <h4 class="text-lg text-gray-400 mb-6">Note Information</h4>
    <hr class="mb-4 border-gray-600" />

    <dl class="row">
        <!-- Title Field -->
        <dt class="col-sm-4 font-semibold text-gray-400">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-8 text-lg">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <!-- Content Field -->
        <dt class="col-sm-4 font-semibold text-gray-400">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-8 text-lg">
            @Html.DisplayFor(model => model.Content)
        </dd>

        <!-- User Field (Email) -->
        <dt class="col-sm-4 font-semibold text-gray-400">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-8 text-lg">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
    </dl>

    <!-- Delete Confirmation Form -->
    <form asp-action="Delete" class="mt-6 text-center">
        <input type="hidden" asp-for="NoteId" />
        
        <input type="submit" value="Delete" class="btn btn-danger text-lg font-semibold mx-2" /> 
        <a asp-action="Index" class="btn btn-secondary text-lg font-semibold mx-2">Back to List</a>
    </form>
</div>
